<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.concerto.dao.StationDao">
    <insert id="insertStation" useGeneratedKeys="true" keyProperty="id" parameterType="Station">
        insert into db.station
        values (#{id}, #{station_no}, #{address}, #{name})
    </insert>

    <delete id="deleteStationByStation" parameterType="Station">
        delete from db.station
        <where>
            <if test="id != null and id != ''">And id=#{id}</if>
            <if test="station_no != null and station_no != ''">And station_no=#{station_no}</if>
            <if test="address != null and address != ''">And address=#{address}</if>
            <if test="name != null and name != ''">And name=#{name}</if>
        </where>
    </delete>

    <update id="updateStationAddressByStation" parameterType="Station">
        update db.station
        set address=#{address}
        where station_no = #{station_no}
    </update>

    <update id="updateStationNameByStation" parameterType="Station">
        update db.station
        set name=#{name}
        where station_no = #{station_no}
    </update>

    <select id="getStationList" resultType="Station">
        select *
        from db.station
        <where>
            <if test="id != null and id != ''">And id=#{id}</if>
            <if test="station_no != null and station_no != ''">And station_no=#{station_no}</if>
            <if test="address != null and address != ''">And address=#{address}</if>
            <if test="name != null and name != ''">And name=#{name}</if>
        </where>
    </select>

</mapper>