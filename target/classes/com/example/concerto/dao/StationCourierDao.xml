<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.concerto.dao.StationCourierDao">
    <insert id="insertStationCourier" useGeneratedKeys="true" keyProperty="id" parameterType="Station_courier">
        insert into db.station_courier
        values (#{id}, #{station_no}, #{courier_no})
    </insert>

    <delete id="deleteStationCourierByStationCourier" parameterType="Station_courier">
        delete from db.station_courier
        <where>
            <if test="station_no != null and station_no != ''">And station_no=#{station_no}</if>
            <if test="courier_no != null and courier_no != ''">And courier_no=#{courier_no}</if>
        </where>
    </delete>

    <update id="updateStationCourierByStationCourier" parameterType="Station_courier">
        update db.station_courier
        set station_no=#{station_no}
        where courier_no = #{courier_no}
    </update>

    <select id="getStationCourierList" resultType="Station_courier">
        select *
        from db.station_courier
        <where>
            <if test="id != null and id != ''">And id=#{id}</if>
            <if test="station_no != null and station_no != ''">And station_no=#{station_no}</if>
            <if test="courier_no != null and courier_no != ''">And courier_no=#{courier_no}</if>
        </where>
    </select>

</mapper>