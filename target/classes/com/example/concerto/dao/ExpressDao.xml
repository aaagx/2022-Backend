<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.concerto.dao.ExpressDao">

    <insert id="intserExpressInfo" useGeneratedKeys="true" keyProperty="id" parameterType="Express">
        insert into db.express
        values (#{id},#{express_no},#{express_company},#{product_link},,#{sender_tel},#{recipient_tel},#{sender_name},#{recipient_name},#{sender_address},#{recipient_address},#{status})
    </insert>

    <delete id="deleteExpressInfo" parameterType="int">
        delete from db.express
        where id = #{id}
    </delete>

    <delete id="deleteExpressInfoByPojo" parameterType="Express">
        delete from db.express
        <where>
            <if test="id != null and id != ''">AND id=#{id},</if>
            <if test="express_no != null and express_no != ''">AND express_no=#{express_no},</if>
            <if test="express_company != null and express_company != ''">AND express_company=#{express_company},</if>
            <if test="product_link != null and product_link != ''">AND product_link=#{product_link},</if>
            <if test="sender_tel != null and sender_tel != ''">AND sender_tel=#{sender_tel},</if>
            <if test="recipient_tel != null and recipient_tel != ''">AND recipient_tel=#{recipient_tel},</if>
            <if test="sender_name != null and sender_name != ''">AND sender_name=#{sender_name},</if>
            <if test="recipient_name != null and recipient_name != ''">AND recipient_name=#{recipient_name},</if>
            <if test="sender_address != null and sender_address != ''">AND sender_address=#{sender_address},</if>
            <if test="recipient_address != null and recipient_address != ''">AND recipient_address=#{recipient_address},</if>
            <if test="status != null and status != ''">AND status=#{status},</if>
        </where>
    </delete>

    <update id="updateExpressInfo" parameterType="Express">
        update db.express
        <set>
            <if test="product_link != null and product_link != ''">product_link=#{product_link},</if>
            <if test="sender_tel != null and sender_tel != ''">sender_tel=#{sender_tel},</if>
            <if test="recipient_tel != null and recipient_tel != ''">recipient_tel=#{recipient_tel},</if>
            <if test="sender_name != null and sender_name != ''">sender_name=#{sender_name},</if>
            <if test="recipient_name != null and recipient_name != ''">recipient_name=#{recipient_name},</if>
            <if test="sender_address != null and sender_address != ''">sender_address=#{sender_address},</if>
            <if test="recipient_address != null and recipient_address != ''">recipient_address=#{recipient_address},</if>
            <if test="status != null and status != ''">status=#{status},</if>
        </set>
        where id = #{id}
    </update>

    <select id="getExpressInfoById" parameterType="int" resultType="Express">
        select * from db.express
        where id = #{id}
    </select>

    <select id="getExpressList" resultType="Express">
        select * from db.express
    </select>

    <select id="getExpressListByPojo" parameterType="Express" resultType="Express">
        select * from db.express
        <where>
            <if test="id != null and id != ''">And id=#{id}</if>
            <if test="express_no != null and express_no != ''">
                AND express_no LIKE "%"#{express_no}"%"
            </if>
            <if test="express_company != null and express_company != ''">
                AND express_company LIKE "%"#{express_company}"%"
            </if>
            <if test="product_link != null and product_link != ''">
                AND product_link LIKE "%"#{product_link}"%"
            </if>
            <if test="sender_tel != null and sender_tel != ''">
                AND sender_tel LIKE "%"#{sender_tel}"%"
            </if>
            <if test="recipient_tel != null and recipient_tel != ''">
                AND recipient_tel LIKE "%"#{recipient_tel}"%"
            </if>
            <if test="sender_name != null and sender_name != ''">
                AND sender_name LIKE "%"#{sender_name}"%"
            </if>
            <if test="recipient_name != null and recipient_name != ''">
                AND recipient_name LIKE "%"#{recipient_name}"%"
            </if>
            <if test="sender_address != null and sender_address != ''">
                AND sender_address LIKE "%"#{sender_address}"%"
            </if>
            <if test="recipient_address != null and recipient_address != ''">
                AND recipient_address LIKE "%"#{recipient_address}"%"
            </if>
            <if test="status != null and status != ''">And status=#{status}</if>
        </where>
    </select>


</mapper>