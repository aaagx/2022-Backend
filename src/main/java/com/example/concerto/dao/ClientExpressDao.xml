<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.concerto.dao.ClientExpressDao">

    <insert id="insertClientExpressInfo" useGeneratedKeys="true" keyProperty="id" parameterType="Client_express">
        insert into db.client_express
        values (#{id},#{tel},#{express_no})
    </insert>

    <delete id="deleteClientExpressInfo" parameterType="Client_express">
        delete from db.client_express
        <where>
            <if test="id != null and id != ''">AND id=#{id}</if>
            <if test="tel != null and tel != ''">AND tel=#{tel}</if>
            <if test="express_no != null and express_no != ''">AND express_no=#{express_no}</if>
        </where>
    </delete>

    <update id="updateClientExpressInfo" parameterType="Client_express">
        update db.client_express
        <set>
            <if test="tel != null and tel != ''">tel=#{tel},</if>
            <if test="express_no != null and express_no !=''">express_no=#{express_no},</if>
        </set>
        where id = #{id}
    </update>

    <select id="getClientExpressInfoByExpressNo" parameterType="int" resultType="Client_express">
        select * from db.client_express
        where express_no = #{express_no}
    </select>

    <select id="getClientExpressInfoListByClientTel" parameterType="String" resultType="Client_express">
        select * from db.client_express
        where tel = #{tel}
    </select>

</mapper>