<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.concerto.dao.ClientExpressDao">

    <insert id="insertClientExpressInfo" useGeneratedKeys="true" keyProperty="id" parameterType="ClientExpress">
        insert into db.clientExpress
        values (#{id},#{tel},#{expressNo})
    </insert>

    <delete id="deleteClientExpressInfo" parameterType="ClientExpress">
        delete from db.clientExpress
        <where>
            <if test="id != null and id != ''">AND id=#{id}</if>
            <if test="tel != null and tel != ''">AND tel=#{tel}</if>
            <if test="expressNo != null and expressNo != ''">AND expressNo=#{expressNo}</if>
        </where>
    </delete>

    <update id="updateClientExpressInfo" parameterType="ClientExpress">
        update db.clientExpress
        <set>
            <if test="tel != null and tel != ''">tel=#{tel},</if>
            <if test="expressNo != null and expressNo !=''">expressNo=#{expressNo},</if>
        </set>
        where id = #{id}
    </update>

    <select id="getClientExpressInfoByExpressNo" parameterType="int" resultType="ClientExpress">
        select * from db.clientExpress
        where expressNo = #{expressNo}
    </select>

    <select id="getClientExpressInfoListByClientTel" parameterType="String" resultType="ClientExpress">
        select * from db.clientExpress
        where tel = #{tel}
    </select>

</mapper>